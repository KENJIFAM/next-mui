{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "interface-name": [
      true,
      "never-prefix"
    ],
    "jsx-boolean-value": [
      true,
      "never"
    ],
    "member-access": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "quotemark": {
      "severity": "warning",
      "options": [
        "single",
        "jsx-double"
      ]
    },
    "semicolon": [
      true,
      "always",
      "ignore-interfaces"
    ],
    "trailing-comma": [
      true, 
      {
        "multiline": "never",
        "singleline": "never"
      }
    ]
  }
}
